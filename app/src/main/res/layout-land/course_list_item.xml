<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/textViewCourseName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="81dp" />
        <TextView
            android:id="@+id/textViewCourseStatus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textViewCourseName"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="81dp" />
        <TextView
            android:id="@+id/textViewCourseStartDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textViewCourseStatus"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="81dp" />
        <TextView
            android:id="@+id/textViewCourseEndDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textViewCourseStartDate"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="81dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/courses"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/textViewMentorName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="81dp" />
        <TextView
            android:id="@+id/textViewMentorPhone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textViewMentorName"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="81dp" />
        <TextView
            android:id="@+id/textViewMentorEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textViewMentorPhone"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="81dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>